        $.ajax({
            type: 'POST',
            url: '/Forum/SelectForum',
            cache: false,
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, val) {
                    var html = '<option>' + val.Forum_Name + '</option>';
                    $("#inputForum_Name").append(html);
                });
            },
